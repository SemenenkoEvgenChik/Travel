@model TravelAgency.BLL.BusinessModels.Pagination.ResponsePaginationTourModel
@using TravelAgency.BLL.Enums

<div class="container-fluid " id="serchTours">
    <h5 class="text-center">Фильтр</h5>
    <div class="row m-0">
        <div class="col-sm">
            <select id="sortIndexBLL" class="form-control w-auto">
                <option value="@((int)SortIndexBLL.TypeOfTour)" selected>По умолчанию</option>
                <option value="@((int)SortIndexBLL.Price)">Цене</option>
                <option value="@((int)SortIndexBLL.CountPerson)">Количеству человек</option>
                <option value="@((int)SortIndexBLL.NumberOfStars)">Количеству звезд гостиницы</option>
            </select>
        </div>
        <div class="col-sm">
            <input type="number" id="NumberPerson" class="form-control w-auto" placeholder="Количество человек" />
        </div>
        <div class="col-sm">
            <input type="number" id="PriceDown" class="form-control" placeholder="Цена от" />
        </div>
        <div class="col-sm">
            <input type="number" id="PriceUp" class="form-control" placeholder="Цена до" />
        </div>
        <div class="col-sm">
            <select id="NumberOfStars" class="form-control w-auto">
                <option value="" selected >&#9733; в гостинице</option>
                <option value="1">3</option>
                <option value="2">4</option>
                <option value="3">5</option>
            </select>
        </div>
        <div class="col-sm">
            <select id="TypeOfRest" class="form-control w-auto">
                <option value="" selected >Тип тура</option>
                <option value="1">Отдых</option>
                <option value="2">Шопинг</option>
                <option value="3">Экскурсия</option>
            </select>
        </div>
        <div class="col-sm">
            <button type="button" class="btn btn-secondary w-auto" onclick="GetAllNewTours()">Применить!</button>
        </div>
    </div>
</div>
<div class="card-body text-center">
    <div class="row">
        @foreach (var t in Model.Tours)
        {
            <div class="col-sm-6 mb-2">
                <div class="card">
                    <div class="card-body ">
                        <h4 class="card-title">@t.TypeOfTourBLM.Description</h4>
                        <h5 class="card-title">@t.FlightBLM.FromWhereBLM.NameOfCity &#10148; @t.FlightBLM.WhereToBLM.NameOfCity</h5>
                        <h5>Проживание в @t.HotelBLM.NumberOfStars&#9733; отеле!</h5>
                        <p class="card-text m-0"><b>@t.FoodBLM.TypeOfFood</b></p>
                        <p class="card-text m-0"><b>@t.TypeOfRestBLM.Description</b> за <b>@t.Price$</b> (цена указана за 1 человека)</p>
                        <p class="m-0">Дата отправления: <b>@t.DepartureDate</b> Дата прибытия: <b>@t.ArrivalDate</b></p>
                        <p class="m-0">Транспорт: <b>@t.FlightBLM.MeansOfTransportBLM.TypeOfTransport</b></p>
                        <p class="card-text m-0">Тур расчитан максимум на: <b>@t.NumberOfPersons</b> человек</p>
                        @if (t.DepartureDate > DateTime.Now)
                        {
                            @Html.ActionLink("Изменить тур", "Edit", "Tour", new { id = t.Id, flightId = t.FlightId }, new { @class = "btn btn-secondary" })
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="d-flex justify-content-center">
    <nav aria-label="PageNavigation">
        <ul class="pagination">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" id="Prev" href="javascript:Prev()" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            <li class="page-item"><a class="page-link">@Model.PageNumber / @Model.TotalPages</a></li>

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="javascript:Next()" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>



