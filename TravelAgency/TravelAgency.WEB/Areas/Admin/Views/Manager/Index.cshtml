@model TravelAgency.WEB.Models.ViewModels.ListManagerViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
        @if (Model.Managers.Count() < 1)
        {
            <h4 class="text-center">У вас нет менеджеров!Пора добавить.</h4>
        }
        else
        {
            <table class="table text-center table-hover">
                <thead >
                    <tr class="row">
                        <th class="col-sm-4 table-info">Имя</th>
                        <th class="col-sm-4 table-info">Фамилия</th>
                        <th class="col-sm-4 table-info">
                            <button type="button" class="btn btn-primary m-0" data-toggle="modal" data-target="#RegistrationNewManager">
                                Зарегистрировать менеджера
                            </button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.Managers)
                    {
                        <tr class="row">
                            <th class="col-sm-4">@m.Name</th>
                            <th class="col-sm-4">@m.Surname</th>
                            <td class="col-sm-4">
                                <button type="button" class="btn btn-secondary delete-manager-btn" data-managerid="@m.Id">Удалить менеджера</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
</div>
<div class="modal fade" id="RegistrationNewManager" tabindex="-1" role="dialog" aria-labelledby="RegistrationNewManager" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="RegistrationNewManager">Регистрация нового менеджера</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="item">
                    <input type="text" id="Name" name="Name" placeholder="Имя" class="form-control mt-2 w-100" />
                    <span id="Name-error"></span>
                </div>
                <div class="item">
                    <input type="text" id="Surname" name="Surname" placeholder="Фамилия" class="form-control mt-2 w-100" />
                    <span id="Surname-error"></span>
                </div>
                <div class="item">
                    <input type="text" id="Email" name="Email" placeholder="Почта" class="form-control mt-2 w-100" />
                    <span id="Email-error"></span>
                    <span id="DoesSuchMailExist"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="createNewManager()">Добавить</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Admin/Scripts/Manager.js"></script>
}
